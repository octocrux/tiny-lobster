{
  "name": "tiny-lobster",
  "version": "0.1.0",
  "description": "My teensy-tinsy node.js pet",
  "main": "index.js",
  "repository": "git@github.com:octocrux/tiny-lobster.git",
  "author": "octocrux <cate.petrusevich@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/* && make-dir dist",
    "start": "npm run recompile && cross-env PORT=3001 NODE_ENV=production node -r dotenv/config dist/app.js",
    "compile": "tsc --noEmit false --outDir dist",
    "recompile": "npm run clean && npm run compile",
    "dev": "nodemon --config nodemon.json src/app.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect src/app.ts",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "make-dir-cli": "^3.0.0",
    "rimraf": "^3.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.10.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "nodemon": "^2.0.13",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "yarn": "^1.22.15"
  }
}
